.book-view-title {
  display: flex;
  align-items: center;
  text-align: justify;
  height: 112rpx;
  background-color: #FFF;
  border-bottom: 1rpx dashed rgba(0, 0, 0, 0.05);
}

.book-view-title-image {
  position: relative;
  width: 68rpx;
  height: 68rpx;
  margin-left: 40rpx;
  border: 2rpx solid #FFDC60;
  border-radius: 50%;
}

.book-view-title-text {
  margin-left: 40rpx;
  font-size: 32rpx;
}

.book-view-title-value {
  margin-left: auto;
  margin-right: 40rpx;
}

.book-view-item {
  display: flex;
  align-items: center;
  text-align: justify;
  height: 60rpx;
  background-color: #FFF;
}

.book-view-item-image {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  margin-left: 40rpx;
}

.book-view-item-text {
  margin-left: 30rpx;
  font-size: 24rpx;
}

.book-view-item-value {
  margin-left: auto;
  margin-right: 40rpx;
  font-size: 24rpx;
}

.book-view-comment {
  display: flex;
  align-items: center;
  text-align: justify;
  height: 80rpx;
  background-color: #FFF;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  border-bottom: 4rpx solid rgba(0, 0, 0, 0.05);
  font-size: 24rpx;
}

.book-view-comment-title {
  margin-left: 30rpx;
}

.book-view-comment-image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 0rpx;
  margin-left: auto;
}

.book-view-comment-text {
  margin-right: 30rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
}

.book-view-comment-concent {
  height: 200rpx;
  line-height: 200rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  border-bottom: 4rpx solid rgba(0, 0, 0, 0.05);
}

.book-view-button {
  display: flex;
  position: fixed; 
  bottom: 0;
  text-align: center;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  color: #fff;
}

.book-view-button-edit {
  width: 50%;
  background-color: #FFDC60;
}

.book-view-button-delete {
  width: 50%;
  background-color: red;
}