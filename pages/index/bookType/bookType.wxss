.book-type {
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.book-type-item {
  width: 50%;
  text-align: center;
}

.book-type-description {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  font-size: 20rpx;
  color: darkgray;
  letter-spacing: 2rpx;
}

.book-type-child {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: left;
  flex-flow: row wrap;
}

.book-type-child-items {
  height: 180rpx;
  width: 25%;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.book-type-child-items-image {
  height: 120rpx;
  width: 100rpx;
  border: 2rpx solid #FFDC60;
}

.book-type-child-items-text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
}