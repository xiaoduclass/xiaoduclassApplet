page {
  background-color:rgba(0, 0, 0, 0.05);
}

.index-header {
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
  text-align: justify;
  background: #FFDC60;
  color: #fff;
  position: fixed;
  top: 0;
}

.index-header-add {
  height: 40rpx;
  width: 40rpx;
  margin-left: 30rpx;
}

.index-header-date {
  height: 40rpx;
  width: 40rpx;
  margin-left: 50rpx;
}

.index-header-tabs {
  position: absolute;
  left: 40%;
  text-align: center;
  border: 2rpx solid #fff;
  border-radius: 20rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  font-size: 24rpx;
}

.index-header-more {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
  margin-left: auto;
}

.header {
  height: 300rpx;
  background: #FFDC60;
}

.header-budget {
  color: #FFF;
  height: 200rpx;
  line-height: 300rpx;
  text-align: center;
}

.header-money {
  display: flex;
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}

.header-money-group {
  flex: 1;
  position: relative;
  text-align: center;
  color: #FFF;
  height: 100%;
}

.header-money-conent {
  position: relative;
}

.list {
  width: 100%;
}

.list-title {
  display: flex;
  align-items: center;
  text-align: justify;
  width: 100%;
  height: 30rpx;
  font-size: 20rpx;
  color: darkgray;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.list-title-date {
  display:inline;
  margin-left: 30rpx;
}

.list-title-week {
  display:inline;
  margin-left: 40rpx;
}

.list-title-content {
  display:inline;
  margin-left: auto;
  margin-right: 30rpx;
}

.list-content {
  display: flex;
  align-items: center;
  text-align: justify;
  height: 112rpx;
  background-color: #FFF;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.list-content-image {
  position: relative;
  width: 68rpx;
  height: 68rpx;
  margin-left: 40rpx;
  border: 2rpx solid #FFDC60;
  border-radius: 50%;
}

.list-content-text {
  position: relative;
  margin-left: 40rpx;
  font-size: 32rpx;
}

.list-content-money {
  position: relative;
  margin-left: auto;
  margin-right: 40rpx;
}